<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PubSystemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.fsp.pubsystmcia.model.Funcionario</class>
    <class>br.com.fsp.pubsystmcia.model.Endereco</class>
    <class>br.com.fsp.pubsystmcia.model.Telefone</class>
    <class>br.com.fsp.pubsystmcia.model.Categoria</class>
    <class>br.com.fsp.pubsystmcia.model.Comanda</class>
    <class>br.com.fsp.pubsystmcia.model.Compra</class>
    <class>br.com.fsp.pubsystmcia.model.Fornecedor</class>
    <class>br.com.fsp.pubsystmcia.model.Produto</class>
    <class>br.com.fsp.pubsystmcia.model.Mesa</class>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/teste?autoReconnect=true&amp;useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="toor"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
